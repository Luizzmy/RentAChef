<div class="centered">
  <br>
  <h1>Edit {{name}}</h1>
  <br>

  <form action="{{_id}}/menu/edit" method="post">
    
    <div class="form-group">
      <label>Name of dish</label>
      <input class="form-control" type="text" id="name" name="name" value="{{name}}">
    </div>

    <div class="form-group">
      <label>Type of food</label>
      <input class="form-control" type="text" id="type" name="type" value="{{type}}">
    </div>

    <div class="form-group">
      <label>Price (ex: "500" equals $5.00)</label>
      <input class="form-control" type="number" id="price" name="price" value="{{price}}">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" name="description" id="description">{{description}}</textarea>
    </div>

    <br><br>

    <button class="btn btn-danger btn-block" style="background-color: #ff5722;" type="submit">Save changes</button>

    <br>

    <input type="button" class="btn btn-outline-secondary" value="Go back" onclick="history.back()">

  </form>
</div>