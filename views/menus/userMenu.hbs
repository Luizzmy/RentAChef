<div class="left">
  <br>
  <h1>My Menu Items</h1>

  <input type="button" class="btn btn-outline-secondary" value="Go back" onclick="history.back()">
  <a href="/profile"><button class="btn btn-outline-secondary" >Back to profile</button></a>

  <a href="/menus/create"><button class="btn btn-danger " style="background-color: #ff5722;">Add a new dish</button></a>
  
  <ul class="ul-cards">
    {{#each menus}}
      <div class = "card" style="width: 18rem; margin:10px 10px 0 0;">
        <div class="card-body">
          <h4 class="card-title">{{name}}</h4>
          <h5 class="card-subtitle mb-2 text-muted">{{type}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">${{price}}.00</p>
          <p class="card-text">{{description}}</p>
          <a href="/menus/edit/{{_id}}" class="card-link"><button class="btn btn-outline-secondary btn-sm" >Edit</button></a>
          <a href="/menus/delete/{{_id}}"class="card-link"><button class="btn btn-outline-danger btn-sm">Delete</button></a>
        </div>
      </div>
    {{/each}}
  </ul>
</div>