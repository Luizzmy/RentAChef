<form action="/profile/edit" method="post" enctype="multipart/form-data">
  
  <label>Profile Photo:</label>
  <input type="file" name="image">
  <br>
  <label>Name</label>
  <input type="text" name="names" value="{{names}}">
  <br>
  <label>Last Name</label>
  <input type="text" name="lastNames" value="{{lastNames}}">
  <br>
  <label>Email</label>
  <input type="email" name="email" value="{{email}}">
  <br>
  <label>Favorite Foods (separate with commas)</label>
  <input type="text" name="favFoods" value="{{favFoods}}">
  <br>
  <label for="bio">Bio:</label>
  <textarea id="bio" name="description" value="{{description}}"></textarea>

  <h3>Contact Info</h3>
  <hr>
  <label>Phone Number</label>
  <input type="text" name="phoneNumber" value="{{phoneNumber}}">
  <br>
  <label>City</label>
  <input type="text" name="city" value ="{{city}}">
  <br>
  <label>State</label>
  <input type="text" name="state" value="{{state}}">
  <br>
  <label>Country</label>
  <input type="text" name="country" value="{{country}}">
  <br>

  {{#if isChef}}
    <h3>Chef Profile</h3>
    <hr>
    <h4>Menu</h4>
    <input type="text" name="menu" value="{{manu}}">
    <br/>
  {{/if}}

  <input type="submit">
</form>
<a href="/profile"><button>Cancel</button></a>